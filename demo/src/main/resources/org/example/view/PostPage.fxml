                        <Image url="@pics/Clipped_image_20250121_160828.png" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
                  <Label fx:id="lbl_commentNumber" text="0" textFill="WHITE">
